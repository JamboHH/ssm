<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd
							http://www.springframework.org/schema/context
							http://www.springframework.org/schema/context/spring-context.xsd
							http://www.springframework.org/schema/mvc
							http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <import resource="classpath:spring-context.xml"></import>
    <context:component-scan base-package="com.ah.controller"></context:component-scan>
    <!--注解开发-->
    <mvc:annotation-driven></mvc:annotation-driven>

    <!-- 额外增加一个handle  优先级最低，如果找不到对应的handel就会执行本handle 进行资源的加载-->
    <mvc:default-servlet-handler/>

    <!-- 静态资源路径配置
        mapping 访问路径
        location 静态资源的存放地址
    -->
    <mvc:resources mapping="/goods/webjars/**" location="/webjars/"></mvc:resources>
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>

    <!--    &lt;!&ndash;    配置哪些方法进行拦截&ndash;&gt;
        <mvc:interceptors>
            <mvc:interceptor>
                &lt;!&ndash; /** 代表所有方法进行拦截&ndash;&gt;
                <mvc:mapping path="/**"/>
                &lt;!&ndash; mvc:exclude-mapping 代表放行，不进行拦截&ndash;&gt;
                <mvc:exclude-mapping path="/user/login"></mvc:exclude-mapping>
                <bean class="com.ah.Interceptor.MyInterceptor"></bean>
            </mvc:interceptor>
        </mvc:interceptors>-->
    <!-- 文件上传解析器-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="maxUploadSize" value="1048576"></property>
    </bean>
</beans>